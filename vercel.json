{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" }
  ],
  "functions": {
    "server.js": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 10,
      "includeFiles": [
        "public/**",
        "views/**",
        "config/**",
        "middleware/**",
        "models/**",
        "routes/**"
      ]
    }
  },
  "routes": [
    { "src": "/(.*)", "dest": "server.js" }
  ],

  "regions": ["iad"]
}

